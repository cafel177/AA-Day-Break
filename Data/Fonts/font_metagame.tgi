[Font template = Font]
{
	ids = metagame
	name = "#font_metagame_name"
	size = 12 ;; this is the Windows font size, not the actual pixel height of glyphs.

	[CharacterSet]
	{
		ids = base
		font = simsun
		antialias = false
		bold = false
		shadow = false
	}

	[CharacterSet]
	ids = hangul_jamo
	font = simsun

	[CharacterSet]
	ids = hiragana_katakana
	font = simsun

	[CharacterSet]
	ids = han
	font = simsun

	[CharacterSet]
	ids = hangul_johab
	font = simsun
}
