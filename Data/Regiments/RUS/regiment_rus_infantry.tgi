		[Slot]	;; rear guard 1
		element_IDS = rus_infantry_sp_amphib

		[Slot]	;; rear guard 2
		element_IDS = rus_infantry_sp_amphib
		
		[Slot]	;; rear guard 3
		element_IDS = rus_infantry_sp_amphib
	
		[Slot]	;; flank
