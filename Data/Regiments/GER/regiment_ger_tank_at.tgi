		oil = 15
	}

	[PropertiesComponent]
	{
		[Property]
		property_IDS = org_tank

		[Property]
		property_ids = antitank_company
	}

	[View]
	{
		resource_prefix = /Units/GER/GERTankDestroyer/GERTankDestroyer
