;---------------------------------------------------------------------------------------
;
; BASIC MG ARMY TEMPLATE
;
; So possibly this could inherit from Actor and then not specify some of the 
; components that aren't used (like most of them).   However, the engine expects
; units to have most of these components and tends to blow up whenever certain
; ones are omitted (for instance, to have a mind component to be able move the
; unit, we are required to have an element component).   To save everyone some
; pain, I just created this template with a bunch of dummy values.  The only 
; things that are actually useful are the MetaGameComponent and the View.
;
;---------------------------------------------------------------------------------------

;; This is the basic template that all MG armies use
[Template MetaGameArmy Inherit=Unit]
{
	category = METAGAME_ACTOR
	places_tracks = true

	[MetaGameComponent]
	{		
		movement = 1

		; percent amount this army increases quickbattle victory odds
		; this is addition to the amount of damage done by the divisions
		damage = 0.00

		; all MG actors require a matching preference, and they should all be unique!
		; if a user upgrades an army to have extra divisions, and multiple MG armies 
		; "match" the divisions, then the one with the strongest (lowest number) 
		; preference is used in the game.  
		division_matching_preference = 0

		[StockpileBonus Inherit=ResourceList]
		money = 25

		[WaterStockpileBonus Inherit=ResourceList]
		money = 50
	}

	[BodyComponent]
	{
		rot_time = 3
		sink_time = 2
		health = 1
		defense = 1
	}
	
	[EconomyComponent]
	{
		[Cost]
		money = 0
		
		[Upkeep]
		unit_limit_consumed = 0
		oil = 0
	}

	[ElementComponent]
	{
		morale_value = 1
	}
	
	[PropertiesComponent]
	{	
		[Property]
		property_IDS = captain
	}
	
	[DetectionComponent]
	{
		detection_range = 1.0
		remote_detection_range = 1.0
	}

	[View]
	{
		shadow_type = STENCIL
		;; shadow_texture = /effects/shadows/UnitShadow.dds

		selected_vfx = selected_circle_stationary
		focused_vfx = selected_circle
		aspects_as_variations = false
		icon = %sIcon.dds
		[TextureSearchPath]
		path = /Shared/SharedTextures
		
		[WhenDestroyed Template=FXC_PlaySFX]
		audio_ids = mg_death_army
		at = TARGET_GROUND
	}

	[Flags]
	{
		targetable = true
		blocking = false
		axis_locked = true
	}

	[Size]
	{
		height = 2

		blocking_shape = CIRCLE
		blocking_radius = 0.5
		
		soft_shape = RECT
		rect_width = 1.5
		rect_height = 1.5
		
		fixed scale_min = 1.0
		fixed scale_max = 1.0
	}

	[MoverComponent]
	{
		speed_max = 32.0
		acceleration = 10.0
		
		[WhenStartMoving Template=FXC_PlaySFX]
		audio_IDS = mg_army_move
	}
}

;; Added template to standardize the tooltip
[Template MetaGameComponentArmy Inherit=MetaGameComponent]
{
	movement = 1
}

