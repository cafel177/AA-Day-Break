						amount = 2

						[Modifier Template=MultiplyModifier]
						attribute = RESUPPLY_RATE
						amount = -1

						[WhenAdded template=FXC_CreateVFX]
						VFX_IDS = smoke_tint
					}
				}

				[WhenDo template=FXC_PlaySFX]
				{
					audio_ids = gbr_mg_light
				}

			}
		}
	}

	[PerformerComponent]
	{
		[Turret]
