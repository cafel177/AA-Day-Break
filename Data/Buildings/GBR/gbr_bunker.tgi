[Thing Template=AAGBRBuildingPackable]
{
	IDS = gbr_bunker
	name = "#gbr_bunker_Thing_name"
	editor_name = "#gbr_bunker_Thing_editor_name"

	[LairComponent]
	{
		reward = 15, 25	
	}

	[BodyComponent]
	{
		health = 1000
		defense = 5
	}
	
	[DefenderComponent]
	{
		control_range = 25
	
		[Ability Template=AAAttackLocal]
		{
			turret_ids = turret
			
