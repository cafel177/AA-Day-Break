	[EconomyComponent]
	{
		[Cost]
		money = 150
		
		[Production]
		ammo = 20
		
		[Upkeep]
		building_limit_consumed = 1
	}
	
	[PropertiesComponent]
	{	
		[Property]
		property_IDS = artillery_brigade

		[Property]
		property_IDS = economic_building	

		[Property]
		property_IDS = ammo
	}	
		
	[ResearchComponent]
	{	
		[ResearchItem]
		{
			property_IDS = tech_long_range_artillery
			type = GLOBAL	
			research_time = 60
		
			[ResearchCost Template=CostList]
			{
				money = 75
			}
		}	
				
		[ResearchItem]
		{
			property_IDS = tech_improved_mortars
			type = GLOBAL
			research_time = 60
		
			[ResearchCost Template=CostList]
			{
				money = 75
			}
		}

		[ResearchItem]
