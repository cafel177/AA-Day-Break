	{
		[DeploymentInfo]
		{
			creation_offset = 2.5, 1.5
			deployment_offset = 2.5, 6.0
		}
	}

	[RecruitComponent]
	{
		[RecruitActor]
		actor_ids = jpn_truck_bunker_artillery
	}

